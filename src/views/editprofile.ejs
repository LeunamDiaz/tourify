<body class="bg-gray-900">


  <section class="bg-gray-800">
    <div class="w-full lg:w-1/2 px-1 mx-auto ml-auto pt-0">
      
      <div class="relative flex flex-col min-w-0 break-words bg-gray-900 w-full shadow-xl rounded-lg">
          <div class="px-4">
            <div class="w-full py-6 z-20">
              <div class="space-x-2">
              </div>

              <form action="/editprofile" method="POST" class="sm:w-2/3 w-full px-4 lg:px-0 mx-auto" enctype="multipart/form-data">
              

                <div class="relative w-full px-0 flex justify-center group">
                  <label for="profileImage" class="cursor-pointer relative">
                    <div class="full group-hover:grayscale group-hover:opacity-75 border-4 border-blue-500 rounded-full overflow-hidden relative">
                      <!-- Agregar el icono con posición absoluta -->
                      <img src="/static/imagemedallas/upload.png" alt="Icono" class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-16 h-16">
                      
                      <!-- Foto de perfil -->
                      <img id="previewImage" class="w-48 h-48" src="../../static/usersimages/<%= img[0].image %>" alt="Extra large avatar">
                      
                      <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300">
                        <input type="file" id="profileImage" name="profileImage" class="hidden" accept="image/*" onchange="previewFile()">
                      </div>
                    </div>
                  </label>
                </div>
                
                <script>
                function previewFile() {
                  var input = document.getElementById('profileImage');
                  var preview = document.getElementById('previewImage');
                  var file = input.files[0];
                  var reader = new FileReader();
                
                  reader.onloadend = function () {
                    preview.src = reader.result;
                  };
                
                  if (file) {
                    reader.readAsDataURL(file);
                  } else {
                    preview.src = "../../static/usersimages/<%= img[0].image %>"; // Mostrar la imagen predeterminada si no se selecciona ningún archivo
                  }
                }
                </script>


                <h2 class="text-xl font-bold leading-normal text-white ">
                  User Name
                </h2>

                <div class="pb-2 pt-4">
                  <input type="text" name="name" id="name" value="<%= user[0].name %>" class="block w-full p-4 text-lg rounded-sm bg-black text-white" autofocus required>
              </div>
              
              <h2 class="text-xl font-bold leading-normal text-white">
                Email
              </h2>

              <div class="pb-2 pt-4">
                  <input type="email" name="email" id="email" value="<%= user[0].email %>" class="block w-full p-4 text-lg rounded-sm bg-black text-white" required>
              </div>

              <h2 class="text-xl font-bold leading-normal text-white">
                Country
              </h2>

              <div class="pb-2 pt-4">
                <select name="country" id="country"  class="block w-full p-4 text-lg rounded-sm bg-black text-white">
                    <option value="<%= user[0].country %>"><%= user[0].country %></option>
                  <% countriesList.forEach(country => { %>
                    <option value="<%= country.id_country %>"><%= country.name %></option>
                  <% }); %>
                </select>
              </div>

              <h2 class="text-xl font-bold leading-normal text-white">
                Password
              </h2>

              <div class="pb-2 pt-4">
                  <input class="block w-full p-4 text-lg rounded-sm bg-black text-white" type="password" name="password" id="password" placeholder="Cambiar contraseña">
              </div>

              <div class="text-right text-gray-400 hover:underline hover:text-gray-100">
                  <a href="#"></a>
              </div>

                <div class="text-right text-gray-400 hover:underline hover:text-gray-100">
                    <a href="#"></a>
                </div>

              </div>  
