  <script>
    if (window.location.pathname === "/model/:id_historical") {
      document.write('<script type="module" src="https://ajax.googleapis.com/ajax/libs/model-viewer/3.3.0/model-viewer.min.js"><\/script>');
    } else {
      
      document.write('<script type="module" src="http://ajax.googleapis.com/ajax/libs/model-viewer/3.3.0/model-viewer.min.js"><\/script>');
    }
  </script>
  


  
  <div class="container mx-auto">

        <style>
          #mi-modelo {
            width: 100%; /* Puedes ajustar el ancho según tus necesidades */
            height: 600px; /* Puedes ajustar la altura según tus necesidades */
          }
        </style>

        <% if (models && models.length > 0) { %>
          <model-viewer id="mi-modelo" src="../../static/assets/<%= models[0].model %>" ar ar-modes="scene-viewer webxr quick-look" camera-controls poster="poster.webp" shadow-intensity="1">
        <% } else { %>
          <!-- Manejar el caso en que models no tiene datos -->
          <p>No hay modelos disponibles.</p>
        <% } %>

        <div class="progress-bar hide" slot="progress-bar">
            <div class="update-bar"></div>
        </div>
        <button slot="ar-button" id="ar-button" class="bg-blue-500 text-white font-bold px-4 py-2 rounded flex-wrap">
          
          <img src="https://modelviewer.dev/shared-assets/icons/hand.png">
          ¡Pruébalo con realidad aumentada!
        </button>
      </model-viewer>

  </div>

  <script>

const modeloViewer = document.getElementById("mi-modelo");

modeloViewer.addEventListener("load", () => {
  // Oculta la barra de progreso una vez que el modelo está cargado
  document.querySelector(".progress-bar").classList.add("hide");
});

modeloViewer.addEventListener("progress", (event) => {
  // Muestra la barra de progreso y ajusta su tamaño según el progreso de carga
  const progress = event.loaded / event.total * 100;
  const updateBar = document.querySelector(".update-bar");
  updateBar.style.width = `${progress}%`;
  document.querySelector(".progress-bar").classList.remove("hide");
});

  </script>

  <!-- Import the component -->
<script type="module" src="https://ajax.googleapis.com/ajax/libs/model-viewer/3.3.0/model-viewer.min.js"></script>

